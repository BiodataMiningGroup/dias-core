{
    "name": "dias/core",
    "description": "Core of the BIIGLE DIAS web application.",
    "keywords": ["BIIGLE DIAS", "core"],
    "license": "proprietary",
    "type": "project",
    "require": {
        "php": ">=5.5.9",
        "ext-json": "*",
        "ext-pgsql": "*",
        "ext-gd": "*",
        "ext-exif": "*",
        "laravel/framework": "5.2.*",
        "intervention/image": "~2.1"
    },
    "require-dev": {
        "ext-curl": "*",
        "ext-sqlite3": "*",
        "fzaninotto/faker": "~1.4",
        "phpunit/phpunit": "~4.0",
        "sami/sami": "dev-master",
        "mockery/mockery": "0.9.*",
        "doctrine/dbal": "2.5.*",
        "laravel/homestead": "^3.0",
        "symfony/css-selector": "2.8.*|3.0.*",
        "symfony/dom-crawler": "2.8.*|3.0.*"
    },
    "autoload": {
        "classmap": [
            "database"
        ],
        "psr-4": {
            "Dias\\": "app/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/TestCase.php",
            "tests/ApiTestCase.php",
            "tests/ModelTestCase.php"
        ]
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ],
        "post-install-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postInstall",
            "php artisan cache:clear",
            "php artisan config:clear",
            "php artisan route:clear",
            "php artisan optimize"
        ],
        "post-update-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postUpdate",
            "php artisan cache:clear",
            "php artisan config:clear",
            "php artisan route:clear",
            "php artisan optimize"
        ],
        "test": [
            "php vendor/bin/phpunit",
            "npm test"
        ],
        "fix": [
            "php-cs-fixer --config-file='.php_cs' fix"
        ],
        "doc": [
            "rm -rf public/doc/api",
            "rm -rf public/doc/server",
            "rm -rf public/doc/client",
            "php vendor/bin/sami.php update sami.php -v",
            "gulp docs",
            "gulp apidoc"
        ]
    },
    "config": {
        "preferred-install": "dist"
    },
    "repositories": [
    ]
}
