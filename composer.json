{
    "name": "biigle/core",
    "description": "Core of the BIIGLE web application.",
    "keywords": ["BIIGLE", "core"],
    "license": "proprietary",
    "type": "project",
    "require": {
        "php": ">=7.1",
        "ext-exif": "*",
        "ext-json": "*",
        "ext-pgsql": "*",
        "ext-vips": "*",
        "biigle/laravel-image-cache": "^0.3.0",
        "doctrine/annotations": "1.4.0",
        "doctrine/dbal": "^2.5",
        "fideloper/proxy": "~3.3",
        "guzzlehttp/guzzle": "~6.0",
        "jcupitt/vips": "^1.0",
        "laravel/framework": "5.5.*",
        "laravel/tinker": "^1.0",
        "predis/predis": "^1.1",
        "ramsey/uuid": "^3.5",
        "ramsey/uuid-doctrine": "^1.2"
    },
    "require-dev": {
        "filp/whoops": "~2.0",
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "~1.0",
        "phpunit/phpunit": "~6.0",
        "nunomaduro/collision": "^2.0"
    },
    "autoload": {
        "classmap": [
            "database/seeds",
            "database/factories"
        ],
        "psr-4": {
            "Biigle\\": "app/"
        },
        "files": [
            "app/Support/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Biigle\\Tests\\": "tests/php/"
        },
        "classmap": [
            "tests/TestCase.php",
            "tests/ApiTestCase.php",
            "tests/ModelTestCase.php",
            "tests/CreatesApplication.php"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": [
            ]
        }
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover"
        ],
        "test": [
            "docker-compose run --rm worker php -d memory_limit=1G vendor/bin/phpunit --colors=always"
        ],
        "testf": [
            "docker-compose run --rm worker php -d memory_limit=1G vendor/bin/phpunit --colors=always --filter"
        ],
        "fix": [
            "php-cs-fixer fix --config='.php_cs'"
        ],
        "doc": [
            "rm -rf public/doc/api",
            "rm -rf public/doc/server",
            "php sami.phar update sami.php -v",
            "gulp apidoc"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": {
        "image-cache": {
            "type": "vcs",
            "url": "https://github.com/biigle/laravel-image-cache"
        }
    }
}
