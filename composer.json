{
    "name": "dias/core",
    "description": "Core of the BIIGLE DIAS web application.",
    "keywords": ["BIIGLE DIAS", "core"],
    "license": "proprietary",
    "type": "project",
    "require": {
        "php": ">=5.6.4",
        "ext-json": "*",
        "ext-pgsql": "*",
        "ext-gd": "*",
        "ext-exif": "*",
        "laravel/framework": "5.3.*",
        "intervention/image": "~2.1",
        "ramsey/uuid": "^3.5",
        "guzzlehttp/guzzle": "~6.0"
    },
    "require-dev": {
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "~5.0",
        "symfony/css-selector": "3.1.*",
        "symfony/dom-crawler": "3.1.*",
        "doctrine/dbal": "^2.5",
        "laravel/homestead": "^3.0",
        "ramsey/uuid-doctrine": "^1.2"
    },
    "autoload": {
        "classmap": [
            "database"
        ],
        "psr-4": {
            "Dias\\": "app/"
        },
        "files": [
            "app/Support/helpers.php"
        ]
    },
    "autoload-dev": {
        "classmap": [
            "tests/TestCase.php",
            "tests/ApiTestCase.php",
            "tests/ModelTestCase.php"
        ]
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ],
        "post-install-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postInstall",
            "php artisan cache:clear",
            "php artisan config:clear",
            "php artisan route:clear",
            "php artisan optimize"
        ],
        "post-update-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postUpdate",
            "php artisan cache:clear",
            "php artisan config:clear",
            "php artisan route:clear",
            "php artisan optimize"
        ],
        "test": [
            "php vendor/bin/phpunit",
            "npm test"
        ],
        "fix": [
            "php-cs-fixer --config-file='.php_cs' fix"
        ],
        "doc": [
            "rm -rf public/doc/api",
            "rm -rf public/doc/server",
            "rm -rf public/doc/client",
            "php sami.phar update sami.php -v",
            "node node_modules/jsdoc/jsdoc.js -c node_modules/angular-jsdoc/conf.json -t node_modules/angular-jsdoc/template -d public/doc/client -r resources/assets/js",
            "gulp apidoc"
        ]
    },
    "config": {
        "preferred-install": "dist"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
