{
	"name": "dias/core",
	"description": "Core of the BIIGLE DIAS web application.",
	"keywords": ["BIIGLE DIAS", "core"],
	"license": "proprietary",
	"type": "project",
	"require": {
		"laravel/framework": "5.1.*",
		"intervention/image": "~2.1",
		"dias/projects": "dev-master",
		"dias/transects": "dev-master",
		"dias/annotations": "dev-master",
        "dias/copria": "dev-master",
		"dias/copria-thumbnails": "dev-master",
		"dias/copria-color-sort": "dev-master"
	},
	"require-dev": {
        "fzaninotto/faker": "~1.4",
		"phpunit/phpunit": "~4.0",
		"sami/sami": "dev-master",
		"mockery/mockery": "dev-master"
	},
	"autoload": {
		"classmap": [
			"database"
		],
		"psr-4": {
			"Dias\\": "app/"
		}
	},
	"autoload-dev": {
		"classmap": [
			"tests/TestCase.php",
			"tests/ApiTestCase.php",
            "tests/ModelTestCase.php"
		]
	},
	"scripts": {
		"post-install-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-update-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-create-project-cmd": [
			"php -r \"copy('.env.example', '.env');\"",
			"php artisan key:generate"
		],
        "test": [
            "php vendor/bin/phpunit",
            "npm test"
        ],
        "fix": [
            "php-cs-fixer --config-file='.php_cs' fix"
        ],
        "doc": [
            "rm -rf public/doc",
            "php vendor/bin/sami.php update sami.php -v",
            "gulp docs",
            "gulp apidoc"
        ]
	},
	"config": {
		"preferred-install": "dist"
	},
	"repositories": [
		{
			"type": "vcs",
			"url": "porta.cebitec.uni-bielefeld.de:/vol/biodtmin/git/dias-projects.git"
		},
		{
			"type": "vcs",
			"url": "porta.cebitec.uni-bielefeld.de:/vol/biodtmin/git/dias-transects.git"
		},
		{
			"type": "vcs",
			"url": "porta.cebitec.uni-bielefeld.de:/vol/biodtmin/git/dias-annotations.git"
		},
        {
            "type": "vcs",
            "url": "porta.cebitec.uni-bielefeld.de:/vol/biodtmin/git/dias-copria.git"
        },
        {
            "type": "vcs",
            "url": "porta.cebitec.uni-bielefeld.de:/vol/biodtmin/git/dias-copria-thumbnails.git"
        },
        {
            "type": "vcs",
            "url": "porta.cebitec.uni-bielefeld.de:/vol/biodtmin/git/dias-copria-color-sort.git"
        }
	]
}
