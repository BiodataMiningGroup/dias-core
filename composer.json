{
	"name": "dias/core",
	"description": "Core of the BIIGLE DIAS web application.",
	"keywords": ["BIIGLE DIAS", "core"],
	"license": "proprietary",
	"type": "project",
	"require": {
		"laravel/framework": "5.1.*",
		"intervention/image": "~2.1"
	},
	"require-dev": {
        "fzaninotto/faker": "~1.4",
		"phpunit/phpunit": "~4.0",
		"sami/sami": "dev-master",
		"mockery/mockery": "dev-master"
	},
	"autoload": {
		"classmap": [
			"database"
		],
		"psr-4": {
			"Dias\\": "app/"
		}
	},
	"autoload-dev": {
		"classmap": [
			"tests/TestCase.php",
			"tests/ApiTestCase.php",
            "tests/ModelTestCase.php"
		]
	},
	"scripts": {
		"post-install-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-update-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-create-project-cmd": [
			"php -r \"copy('.env.example', '.env');\"",
			"php artisan key:generate"
		],
        "test": [
            "php vendor/bin/phpunit",
            "npm test"
        ],
        "fix": [
            "php-cs-fixer --config-file='.php_cs' fix"
        ],
        "doc": [
            "rm -rf public/doc",
            "php vendor/bin/sami.php update sami.php -v",
            "gulp docs",
            "gulp apidoc"
        ]
	},
	"config": {
		"preferred-install": "dist"
	}
}
